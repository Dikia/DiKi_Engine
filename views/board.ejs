<!DOCTYPE html>
<html>
	<head>
		<title>Diki Asset</title>
		<meta charset="utf8">
		<script src="../lib/jquery-3.1.1.min.js"></script>
		<link rel="stylesheet" href="../stylesheets/style.css">
		<script src="../lib/semantic.min.js"></script>
		<link rel="stylesheet" href="../lib/semantic.min.css">

		<script>
			function new_submit(option){

				var inWriter = $('.addWriter_').val();
				var inTitle = $('.addTitle_').val();
				var inPassword = $('.addPassword_').val();
				var inContent = $('.addContent_').val();

				if(option == 'add'){

				if(inWriter == '' || inTitle == '' || inPassword=='' || inContent==''){

						alert('내용을 모두 입력해야 합니다.');
						return
				}else{
						$('#writeAction').submit();}
          }
			}

			function new_cancel(option){

				if(option == 'add'){
					var selection = confirm('취소하시겠습니까?');
					if(selection==true){

						$(location).attr('href','/');
					
					}else if(selection==false){ return;
					 }
				}
			}

			function displayForm(){
				$('#write_form').show();
				$('#main_board').hide();
			}

		</script>

	</head>

	<body class="ui center aligned container" id="board_body">  
      <div class="ui fixed inverted menu">
        
        <h1 id="board_header"><a class="ui inverted blue massive circular label" href="/board" ><b>D </b></a></h1>

        <div class="right menu" id="login_btn">
          <div class="item">
          <a href="#"><h2>Login</h2></a>
        </div>
          <div class="item" id="login_btn">
          <a href="#" ><h2><b>Sign up </b></h2></a>
        </div>
      </div>    
   </div>
	<br/><br/><br/><br/>

	<!--header-->
	
	
	<!--header End-->

	<div class="ui section divider"></div>

	<!--Main menu-->

	<div class="ui massive stackable grey inverted borderless menu" id="board_menu">

		<a class="active item"><b><i class="home icon"></i></b></a>
		<a class="item"><i class="cube icon"></i>&nbsp;&nbsp;<b>Engine</b></a>
		<a class="item"><i class="rocket icon"></i>&nbsp;&nbsp;<b>Ani</b></a>
		<a class="item"><i class="film icon"></i>&nbsp;&nbsp;<b>Video</b></a>
		<a href="/board" class="item"><i class="users icon"></i>&nbsp;&nbsp;<b>Board</b></a>
			<div class="right item">
				<div class="ui icon input">
          <input type="text" placeholder="Search...">
          <i class="inverted circular search link icon"></i>
        </div>
			</div>
	</div>


	<!--Main menu-->

	<div class="ui divider"></div>

	<!--first content left menu-->

	<div class="ui grid">
		<div class="ui four wide column" >
	<table class="ui very basic collapsing celled table" id="table_one">
    <tbody>

        <% var icons = ['users','car','road','settings','television','home','tree','bomb','food','diamond','image','plus']; %>
        <% var icon_words = ['Character','Vehicle','Exterior','Mechanic','Eletronic','Interior','Environment','Military','Food','Fashion','HDRI','more..'];%>
        <% var icon_num = 0; %>
        <% for(var i=0; i<4; i++){%>
        <tr>
         <% for(var j=0; j<3; j++){ %>
        <td>
        <h4 class="ui image header" >
          <a href="#">
           <i class="<%=icons[icon_num]%> big inverted blue icon" id="icon<%=icon_num%>" ></i><br/>
              <div class="content" id="icon_text<%=icon_num%>">
                  <b><%=icon_words[icon_num]%></b>
              </div></a></h4></td>
         <% icon_num++ %>
       <%}%>
    </tr>
    <%}%>

  </tbody>
</table>
</div>

 <!--first content left menu End -->

 <!--first content right menu start -->

	  <div class="twelve wide column">
      <table class="ui very basic collapsing table" id="table_two">
        <tbody>
          <% for(var k=0; k<3; k++){%>
           <tr> <td> <div class="ui six doubling cards">
                <% for(var l=0; l<6; l++){%>
                    <div class="card">
                      <div class="image" id="termi2">
                        <img src="../images/test02.jpg">
                     </div>
                    <div class="extra" id="ex6">
                  </div>
              </div>
              <%}%>
            </div>
            </td>
          </tr>
          <%}%>
          </tbody>
      </table>
    </div>
</div>

<!--first content right menu End -->

	<div class="ui divider"></div>

	<!--second content start-->

		<div id="main_board">
		<table>
			<% var i = 0; %>
			<% if(content.length > 0){ %>

				<% i++; %>
				<% content.forEach(function(item){ %>
					<tr>
						<td class="number"><%=i%></td>
						<td class="title"><a href="/view?id=<%=item._id%>"><%=item.title%></a></td>
						<td class="writer"><%=item.writer%></td>
						<td class="date"><%=item.date%></td>
						<td class="cnt"><%=item.count%></td>
					</tr>
				<% }) %>

			<% }else{ %>
				<tr>
					<td>게시물이 없습니다.</td>
				</tr>
			<% } %>
		</table>
			<a onclick="displayForm();">새글 작성</a>

		</div>
		<div id="write_form">
			<form id="writeAction" action="/" method="post">

				<input type="text" class="addWriter_" name="addWriter" placeholder="작성자">
				<input type="text" class="addTitle_" name="addTitle" placeholder="제목">
				<input type="text" class="addPassword_" name="addPassword" placeholder="비밀번호">
				<textarea class="addContent_" name="addContent" cols="80" rows="20"></textarea>
			</form>
			<div id="lower_grp">
				<a onclick="new_submit('add');">확인</a>
				<a onclick="new_cancel('add');">취소</a>

			</div>
		</div>
	</div>
	</body>
</html>